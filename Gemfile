source 'https://rubygems.org'

# For templating
gem 'haml'
# For automated tasks
gem 'rake'
# For image processing
gem 'rmagick'
# For database access
gem 'sequel'
# The web framework
gem 'sinatra'
# For flash messages
gem 'sinatra-flash'
# For video processing
gem 'streamio-ffmpeg'
# The web server
gem 'thin'

group :development do
  gem 'capistrano'
  gem 'capistrano-bundler'
  gem 'capistrano-rvm'
  gem 'capistrano-thin'
end
